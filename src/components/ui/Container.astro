---
interface Props {
  as?: string;
  class?: string;
  narrow?: boolean;
}

const { as: Tag = 'div', class: className, narrow = false } = Astro.props;
---

<Tag class:list={['container', { 'container--narrow': narrow }, className]}>
  <slot />
</Tag>

<style>
  .container {
    width: 100%;
    max-width: var(--container-max);
    margin-inline: auto;
    padding-inline: var(--container-padding);
  }

  .container--narrow {
    max-width: 900px;
  }
</style>
