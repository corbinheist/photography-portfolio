---
import { getCollection } from 'astro:content';
import ThemeToggle from './ThemeToggle.astro';

const collections = (await getCollection('photoCollections'))
  .sort((a, b) => a.data.sortOrder - b.data.sortOrder);
const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header-inner">
    <div class="header-left">
      <button
        class="menu-toggle"
        type="button"
        aria-label="Toggle menu"
        aria-expanded="false"
        data-menu-toggle
      >
        <span class="menu-bar"></span>
        <span class="menu-bar"></span>
      </button>
    </div>

    <a href="/" class="logo" aria-label="Home">
      Corbin Heist
    </a>

    <div class="header-right">
      <ThemeToggle />
    </div>
  </div>
</header>

<nav class="nav-overlay" data-nav-overlay aria-hidden="true" aria-label="Main navigation">
  <div class="nav-overlay-inner">
    <div class="nav-section" style="--i:0">
      <a
        href="/gallery"
        class:list={['nav-heading', { active: currentPath.startsWith('/gallery') }]}
      >Gallery</a>
      <span class="nav-subtitle">All Photos</span>
    </div>

    <div class="nav-section" style="--i:1">
      <a
        href="/work"
        class:list={['nav-heading', { active: currentPath === '/work' || currentPath === '/work/' }]}
      >Work</a>
      <ul class="nav-sublinks">
        {collections.map((c) => (
          <li>
            <a
              href={`/work/${c.id}`}
              class:list={['nav-sublink', { active: currentPath.startsWith(`/work/${c.id}`) }]}
            >{c.data.title}</a>
          </li>
        ))}
      </ul>
    </div>

    <div class="nav-section" style="--i:2">
      <a
        href="/blog"
        class:list={['nav-heading', { active: currentPath.startsWith('/blog') }]}
      >Notes</a>
      <span class="nav-subtitle">Writing & Reflections</span>
    </div>

    <div class="nav-section" style="--i:3">
      <a
        href="/about"
        class:list={['nav-heading', { active: currentPath.startsWith('/about') }]}
      >About</a>
      <span class="nav-subtitle">The Photographer</span>
    </div>
  </div>
</nav>

<script>
  function initNavOverlay() {
    const toggle = document.querySelector<HTMLButtonElement>('[data-menu-toggle]');
    const overlay = document.querySelector<HTMLElement>('[data-nav-overlay]');
    if (!toggle || !overlay) return;

    const focusableSelector = 'a[href], button:not([disabled])';

    function openMenu() {
      toggle!.setAttribute('aria-expanded', 'true');
      overlay!.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';

      // Focus first link after wipe animation completes
      overlay!.addEventListener('transitionend', function onWipe(e) {
        if (e.propertyName !== 'clip-path') return;
        overlay!.removeEventListener('transitionend', onWipe);
        const firstLink = overlay!.querySelector<HTMLElement>(focusableSelector);
        firstLink?.focus();
      });
    }

    function closeMenu() {
      toggle!.setAttribute('aria-expanded', 'false');
      overlay!.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      toggle!.focus();
    }

    function isOpen() {
      return toggle!.getAttribute('aria-expanded') === 'true';
    }

    toggle.addEventListener('click', () => {
      isOpen() ? closeMenu() : openMenu();
    });

    document.addEventListener('keydown', (e) => {
      if (!isOpen()) return;

      if (e.key === 'Escape') {
        closeMenu();
        return;
      }

      // Focus trap
      if (e.key === 'Tab') {
        const focusable = [
          toggle!,
          ...Array.from(overlay!.querySelectorAll<HTMLElement>(focusableSelector)),
        ];
        const first = focusable[0];
        const last = focusable[focusable.length - 1];

        if (e.shiftKey && document.activeElement === first) {
          e.preventDefault();
          last.focus();
        } else if (!e.shiftKey && document.activeElement === last) {
          e.preventDefault();
          first.focus();
        }
      }
    });

    // Close on nav link click
    overlay.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', closeMenu);
    });
  }

  // Handle Astro page transitions
  document.addEventListener('astro:before-preparation', () => {
    const toggle = document.querySelector<HTMLButtonElement>('[data-menu-toggle]');
    if (toggle?.getAttribute('aria-expanded') === 'true') {
      toggle.setAttribute('aria-expanded', 'false');
      document.querySelector<HTMLElement>('[data-nav-overlay]')?.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }
  });

  document.addEventListener('astro:page-load', initNavOverlay);
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-header);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: color-mix(in srgb, var(--color-bg) 80%, transparent);
    border-bottom: 1px solid var(--color-border);
  }

  :global([data-theme='light']) .header {
    background: color-mix(in srgb, var(--color-bg) 80%, transparent);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-md) var(--container-padding);
  }

  .header-left,
  .header-right {
    display: flex;
    align-items: center;
    min-width: 40px;
  }

  .header-right {
    justify-content: flex-end;
  }

  .logo {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 400;
    letter-spacing: 0;
    text-transform: none;
  }

  /* Hamburger button */
  .menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    background: none;
    border: 1px solid var(--color-border);
    border-radius: 50%;
    cursor: pointer;
    padding: 0;
    z-index: calc(var(--z-overlay) + 1);
    position: relative;
  }

  .menu-bar {
    display: block;
    width: 16px;
    height: 1.5px;
    background: var(--color-text);
    transition: transform var(--duration-normal) var(--ease-out-quart);
  }

  .menu-toggle[aria-expanded='true'] .menu-bar:first-child {
    transform: translateY(3.25px) rotate(45deg);
  }

  .menu-toggle[aria-expanded='true'] .menu-bar:last-child {
    transform: translateY(-3.25px) rotate(-45deg);
  }

  /* Full-screen overlay */
  .nav-overlay {
    position: fixed;
    inset: 0;
    z-index: var(--z-overlay);
    background: var(--color-bg);
    display: flex;
    align-items: center;
    overflow-y: auto;
    overscroll-behavior: contain;

    clip-path: inset(0 0 0 100%);
    transition: clip-path 550ms var(--ease-out-expo);
  }

  .nav-overlay[aria-hidden='false'] {
    clip-path: inset(0);
  }

  .nav-overlay-inner {
    width: 100%;
    max-width: 720px;
    padding: calc(80px + var(--space-xl)) var(--container-padding) var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  /* Nav sections â€” staggered entrance */
  .nav-section {
    opacity: 0;
    transform: translateX(30px);
    transition:
      opacity 400ms var(--ease-out-expo),
      transform 400ms var(--ease-out-expo);
    transition-delay: calc(150ms + var(--i, 0) * 70ms);
  }

  .nav-overlay[aria-hidden='false'] .nav-section {
    opacity: 1;
    transform: translateX(0);
  }

  /* On close: no stagger, everything disappears together */
  .nav-overlay[aria-hidden='true'] .nav-section {
    transition-delay: 0ms;
    transition-duration: 200ms;
  }

  .nav-heading {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: 400;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-text);
    transition: color var(--duration-fast) ease;
    display: inline-block;
  }

  .nav-heading:hover {
    color: var(--color-accent);
  }

  .nav-heading.active {
    color: var(--color-accent);
  }

  .nav-subtitle {
    display: block;
    font-size: var(--text-base);
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
  }

  .nav-sublinks {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm) var(--space-md);
    margin-top: var(--space-xs);
  }

  .nav-sublink {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    transition: color var(--duration-fast) ease;
  }

  .nav-sublink:hover {
    color: var(--color-accent);
  }

  .nav-sublink.active {
    color: var(--color-accent);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .nav-overlay {
      transition: none;
    }

    .nav-section {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>
