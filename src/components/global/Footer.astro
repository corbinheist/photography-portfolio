---
import SubscribeForm from './SubscribeForm.astro';

const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-subscribe">
    <div class="footer-subscribe-inner">
      <div class="footer-subscribe-text">
        <h2 class="footer-subscribe-heading">Follow the work</h2>
        <p class="footer-subscribe-description">Photo essays, process notes, and new collections â€” straight to your inbox.</p>
      </div>
      <div class="footer-subscribe-form">
        <SubscribeForm id="footer" compact />
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="footer-inner">
      <p class="footer-copyright">&copy; {year}</p>
      <div class="footer-links">
        <a href="/about">About</a>
        <a href="/blog">Notes</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
  }

  .footer-subscribe {
    padding: var(--space-xl) var(--container-padding);
    border-bottom: 1px solid var(--color-border);
  }

  .footer-subscribe-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .footer-subscribe-heading {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-xs);
  }

  .footer-subscribe-description {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .footer-subscribe-form {
    flex-shrink: 0;
    width: 360px;
  }

  .footer-bottom {
    padding: var(--space-lg) var(--container-padding);
  }

  .footer-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-max);
    margin: 0 auto;
  }

  .footer-copyright {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .footer-links {
    display: flex;
    gap: var(--space-md);
  }

  .footer-links a {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    transition: color var(--duration-fast) ease;
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .footer-subscribe-inner {
      flex-direction: column;
      align-items: stretch;
      text-align: center;
    }

    .footer-subscribe-form {
      width: 100%;
    }
  }
</style>
