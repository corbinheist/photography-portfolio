---
interface Props {
  title: string;
  description: string;
  link: string;
  pubDate: string;
  thumbnail?: string;
}

const { title, description, link, pubDate, thumbnail } = Astro.props;

const date = new Date(pubDate);
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={link} class="blog-card reveal" target="_blank" rel="noopener noreferrer">
  {thumbnail && (
    <div class="blog-card-image">
      <img src={thumbnail} alt="" loading="lazy" decoding="async" />
    </div>
  )}
  <div class="blog-card-content">
    <time class="blog-card-date" datetime={date.toISOString()}>{formattedDate}</time>
    <h3 class="blog-card-title">{title}</h3>
    <p class="blog-card-desc">{description}</p>
    <span class="blog-card-link">Read on Substack &rarr;</span>
  </div>
</a>

<style>
  .blog-card {
    display: block;
    text-decoration: none;
    color: inherit;
    border: 1px solid var(--color-border);
    transition: border-color var(--duration-fast) ease;
  }

  .blog-card:hover {
    border-color: var(--color-text-muted);
  }

  .blog-card-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s var(--ease-out-expo);
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.03);
  }

  .blog-card-content {
    padding: var(--space-md);
  }

  .blog-card-date {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    display: block;
    margin-bottom: var(--space-xs);
  }

  .blog-card-title {
    font-size: var(--text-lg);
    font-weight: 400;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .blog-card-desc {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-card-link {
    display: inline-block;
    margin-top: var(--space-sm);
    font-size: var(--text-sm);
    color: var(--color-accent);
    transition: color var(--duration-fast) ease;
  }

  .blog-card:hover .blog-card-link {
    color: var(--color-accent-hover);
  }
</style>
