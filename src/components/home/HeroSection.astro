---
import Container from '@components/ui/Container.astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'People in Landscapes',
  subtitle = 'Textures, leading lines, and light that reveals structure â€” in mountains, coastlines, and terrain that takes planning to reach.',
} = Astro.props;
---

<section class="hero">
  <Container>
    <div class="hero-content">
      <h1 class="hero-title mask-reveal">{title}</h1>
      <p class="hero-subtitle reveal">{subtitle}</p>
      <a href="/work" class="hero-cta reveal">View Selected Work &rarr;</a>
    </div>
  </Container>
  <div class="hero-scroll-indicator fade-in">
    <span>Scroll</span>
    <div class="scroll-line"></div>
  </div>
</section>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: calc(100vh - 65px);
    position: relative;
  }

  .hero-content {
    max-width: 900px;
  }

  .hero-title {
    letter-spacing: -0.03em;
    line-height: 1.05;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-top: var(--space-md);
  }

  .hero-cta {
    display: inline-block;
    margin-top: var(--space-lg);
    font-size: var(--text-base);
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color var(--duration-fast) ease;
  }

  .hero-cta:hover {
    color: var(--color-accent-hover);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-accent);
    font-size: var(--text-xs);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: var(--color-accent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.3; transform: scaleY(0.5); transform-origin: top; }
    50% { opacity: 1; transform: scaleY(1); }
  }
</style>
