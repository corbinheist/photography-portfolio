---
interface HeroPhoto {
  url: string;
  width: number;
  height: number;
  lqip: string;
  link?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  photos?: HeroPhoto[];
}

const {
  title = 'People in Landscapes',
  subtitle = 'Textures, leading lines, and light that reveals structure â€” in mountains, coastlines, and terrain that takes planning to reach.',
  photos = [],
} = Astro.props;

// Build srcset data for each photo so the client can use <picture>
const heroData = photos.map((p) => {
  const slug = p.url.split('/').pop() || '';
  const widths = [640, 750, 1080, 1600, 2400].filter((w) => w <= p.width);
  return {
    avifSrcset: widths.map((w) => `${p.url}/${slug}-${w}.avif ${w}w`).join(', '),
    webpSrcset: widths.map((w) => `${p.url}/${slug}-${w}.webp ${w}w`).join(', '),
    fallback: `${p.url}/${slug}-2400.webp`,
    lqip: p.lqip,
    link: p.link,
    landscape: p.width >= p.height,
  };
});
---

<section class="hero">
  <a class="hero-image" data-hero-link href="/gallery" aria-label="View this photo">
    <picture>
      <source type="image/avif" data-hero-avif sizes="100vw" />
      <source type="image/webp" data-hero-webp sizes="100vw" />
      <img class="hero-img" data-hero-img src="" alt="" loading="eager" decoding="async" />
    </picture>
    <div class="hero-overlay"></div>
  </a>

  <div class="hero-content" data-hero-content>
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    <a href="/work" class="hero-cta">View Selected Work &rarr;</a>
  </div>

  <div class="hero-scroll-indicator" data-hero-scroll>
    <span>Scroll</span>
    <div class="scroll-line"></div>
  </div>
</section>

<script type="application/json" data-hero-photos set:html={JSON.stringify(heroData)}></script>

<script>
  function initHero() {
    const dataEl = document.querySelector<HTMLScriptElement>('[data-hero-photos]');
    if (!dataEl) return;

    const allPhotos = JSON.parse(dataEl.textContent || '[]');
    if (!allPhotos.length) return;

    // Pick landscape photos for wide screens, portrait for narrow
    const isLandscape = window.innerWidth > window.innerHeight;
    const filtered = allPhotos.filter((p: any) => p.landscape === isLandscape);
    const pool = filtered.length ? filtered : allPhotos;
    const photo = pool[Math.floor(Math.random() * pool.length)];

    const avifSource = document.querySelector<HTMLSourceElement>('[data-hero-avif]');
    const webpSource = document.querySelector<HTMLSourceElement>('[data-hero-webp]');
    const img = document.querySelector<HTMLImageElement>('[data-hero-img]');

    if (!avifSource || !webpSource || !img) return;

    // Set LQIP as immediate background
    img.style.backgroundImage = `url(${photo.lqip})`;
    img.style.backgroundSize = 'cover';
    img.style.backgroundPosition = 'center';

    // Set srcsets for progressive loading
    avifSource.srcset = photo.avifSrcset;
    webpSource.srcset = photo.webpSrcset;
    img.src = photo.fallback;

    // Link to the photo's album
    if (photo.link) {
      const link = document.querySelector<HTMLAnchorElement>('[data-hero-link]');
      if (link) link.href = photo.link;
    }

    // Fade in hero content after a short delay
    const content = document.querySelector<HTMLElement>('[data-hero-content]');
    const scroll = document.querySelector<HTMLElement>('[data-hero-scroll]');
    if (content) {
      setTimeout(() => content.classList.add('visible'), 1500);
    }
    if (scroll) {
      setTimeout(() => scroll.classList.add('visible'), 3000);
    }
  }

  document.addEventListener('astro:page-load', initHero);
</script>

<style>
  .hero {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 100vh;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    inset: 0;
    display: block;
    cursor: pointer;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.3) 40%,
      rgba(0, 0, 0, 0.05) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: var(--space-3xl) var(--container-padding) var(--space-2xl);
    max-width: 900px;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 1.6s ease, transform 1.6s ease;
  }

  .hero-content.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .hero-title {
    letter-spacing: -0.03em;
    line-height: 1.05;
    color: #fff;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.75);
    margin-top: var(--space-md);
  }

  .hero-cta {
    display: inline-block;
    margin-top: var(--space-lg);
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.85);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color var(--duration-fast) ease;
  }

  .hero-cta:hover {
    color: #fff;
  }

  .hero-scroll-indicator {
    opacity: 0;
    transition: opacity 1.6s ease;
    position: absolute;
    bottom: var(--space-xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    color: rgba(255, 255, 255, 0.6);
    font-size: var(--text-xs);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    z-index: 1;
  }

  .hero-scroll-indicator.visible {
    opacity: 1;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.6);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.3; transform: scaleY(0.5); transform-origin: top; }
    50% { opacity: 1; transform: scaleY(1); }
  }
</style>
