---
import { execSync } from 'node:child_process';
import { ClientRouter } from 'astro:transitions';
import SEO from '@components/global/SEO.astro';
import '@styles/fonts.css';
import '@styles/global.css';
import '@styles/animations.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const { title, description, image, type, noindex } = Astro.props;
const buildHash = (() => { try { return execSync('git rev-parse --short HEAD').toString().trim(); } catch { return 'unknown'; } })();
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="build-id" content={buildHash} />

    <!-- Google Fonts: Instrument Serif + IBM Plex Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Instrument+Serif:ital@0;1&display=swap"
      rel="stylesheet"
    />

    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      noindex={noindex}
    />

    <!-- Umami Analytics -->
    <script
      is:inline
      defer
      src="https://analytics.heist.studio/script.js"
      data-website-id="c305a664-d222-41eb-937a-8309bf7208f0"
      data-domains="heist.studio"
    ></script>

    <!-- Umami Kit: time-on-page heartbeat + scroll depth -->
    <script is:inline defer src="/scripts/umami-kit.js"></script>

    <ClientRouter />

    <!-- Inline theme script to prevent flash -->
    <script is:inline>
      (function () {
        function applyTheme() {
          var stored = localStorage.getItem('theme');
          var theme = stored === 'light' || stored === 'dark'
            ? stored
            : window.matchMedia('(prefers-color-scheme: light)').matches
              ? 'light'
              : 'dark';
          document.documentElement.setAttribute('data-theme', theme);
        }
        applyTheme();
        document.addEventListener('astro:after-swap', applyTheme);
      })();
    </script>
  </head>
  <body>
    <slot />

    <script>
      import '@scripts/theme';
      import '@scripts/animations/init';
      import '@scripts/analytics';
    </script>
  </body>
</html>
