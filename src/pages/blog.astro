---
import PageLayout from '@layouts/PageLayout.astro';
import BlogSection from '@components/blog/BlogSection.astro';
import Container from '@components/ui/Container.astro';
---

<PageLayout title="Notes" description="Photography writing and stories">
  <div class="blog-page-header">
    <Container>
      <div class="blog-header reveal">
        <h1>Notes</h1>
        <p class="blog-subtitle">
          Writing on photography, fieldwork, and process.
          Published on Substack.
        </p>
      </div>
    </Container>
  </div>
  <BlogSection limit={20} showHeader={false} />
</PageLayout>

<style>
  .blog-page-header {
    padding-top: var(--space-xl);
  }

  @media (min-width: 768px) {
    .blog-page-header {
      display: none;
    }
  }

  .blog-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-top: var(--space-sm);
  }
</style>
